{% extends 'base.html.twig' %} {% block title %}Bienvenido{% endblock
%} {% block header %}
{% include 'nav/_menu_nav.html.twig' %}
{% endblock %} {% block body %}
<section class="hero">
  <div class="hero-background">
    <div class="hero-content">
      <h3 class="animation text-white">Bienvenido a bordo</h3>
      <p class="animation text-white">
        Descubre la magia y los secretos que esconde la ciudad de Paris
      </p>
    </div>
  </div>
</section>
<div class="servicios">
    {# {% for message in app.flashes('success') %}
      <div class="alert alert-success text-center w-50 mx-auto my-2">
        {{ message }}
      </div>
    {% endfor %} #}
    <div class="titulo__servicios">
      <h2>Nuestros tours</h2>
    </div>
    <div class="cards">
      {% for item in tours %}
        <article class="card">
          <img src="{{ asset("uploads/images/" ~ item.imagen) }}" alt="{{ item.titulo }}" />         
          <div class="content card-text">
            <h4>{{ item.titulo }}</h4>
            <div class="hidden-elements">
              {% if item.precio == 0 %}
                <h5>
                  Precio: <span>Free Tour</span>
                </h5>
              {% else %}
                <h5>Precio: {{ item.precio/100|number_format(2, '.') }} €</h5>
              {% endif %}
              <div class="card-btn">
                <a href="{{ path('tour', { id: item.id }) }}" class="btn-secondary-card">
                  Más información
                </a>
                {% if app.user %}
                <a href="{{ path('show', { id: item.id }) }}" class="btn-primary-card">
                  Añadir a la cesta
                </a>
                {% else %}
                <a href="{{ path('app_login') }}" class="btn-primary-card">
                  Añadir a la cesta
                </a>
                {% endif %}
              </div>
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}

{% set currentPage = 'home' %}
